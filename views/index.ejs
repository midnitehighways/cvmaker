    <!-- CSS -->
    <link rel="stylesheet" href="stylesheets/style.css" />
    <link rel="stylesheet" href="stylesheets/normalize.css" />
    <link rel="stylesheet" href="fonts/font-awesome-4.2.0/css/font-awesome.min.css" /> <!-- needed for ruri class (form controls) -->   
    <!-- ANGULAR FILES -->
    <script src="javascripts/controllers/controllers.js"></script>
    <script src="javascripts/directives/directives.js"></script>
    <script src="javascripts/main.js"></script>
