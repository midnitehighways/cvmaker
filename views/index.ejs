        <div class="main">                  <!--////////////////////////////////// BEGIN MAIN //////////////////////////////  -->
            <div class="left">
    			<iframe allowtransparency="true" class="preview-pane" type="application/pdf" width="100%" height="100%" 
    			frameborder="0" style="position:relative;z-index:1">Unfortunately, your browser does not support PDF preview:(
                <!-- You can download it though! <a href="javascript:savePDF('CV_'+person.fullName)" class="my-button icon-download">Get PDF</a> -->
                </iframe>
    		</div>
                 
        
