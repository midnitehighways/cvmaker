<!DOCTYPE html>
<html lang="en" ng-app="mainApp">
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <!-- JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="stylesheets/main.css" />
    <!-- <link rel="stylesheet" href="stylesheets/old-main.css" /> -->
    <link rel="stylesheet" href="stylesheets/normalize.css" />
    <link rel="stylesheet" href="fonts/font-awesome-4.2.0/css/font-awesome.min.css" /> <!-- needed for ruri class (form controls) -->   
    <!-- ANGULAR FILES -->
    <script src="javascripts/controllers/controllers2.js"></script>
    <script src="javascripts/directives/directives2.js"></script>
    <script src="javascripts/main.js"></script>
</head>
<body ng-controller="SliderCtrl as slider">
    <div class="header">
        <h4><i class="fa fa-smile-o"></i> CV Maker</h4>    
        <div class="col-md-1 pull-right icons">
            <!-- <ul> -->
                <li><a href="https://www.linkedin.com/in/alexandruoat"><i class="fa fa-2x fa-linkedin-square"></i></a></li>
                <li><a href="https://github.com/midnitehighways/cvmaker"><i class="fa fa-2x fa-github-square"></i></a></li>
            <!-- </ul> -->
        </div>

        <div class = "col-md-3 pull-right icons">
            <!-- <ul> -->
                <li><a href="/" style="color:orange;font-weight:500;">Start right away</a></li>
                <li><a href="#">Choose type</a></li>
                <li><a href="#">About</a></li>
            <!-- </ul> -->
        </div>
    </div>

    <div class="main">
        <div class="central">  
            <a href="/"><img src="images/cv-central2.png"></a>
            <h1>CV MAKER</h1>
            build your <span>special</span> resume
        </div>

        <div id="carousel-example-generic" class="carousel slide" data-interval="3000" data-ride="carousel">
          <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>

        <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="images/type0.png" alt="...">
                    <div class="carousel-caption">
                        <h4>Several CV formats at your choice</h4>
                        <h4>More professional and less official</h4>
                        <h4>Start by choosing suitable type</h4>
                    </div>
                </div>
                <div class="item">
                    <img src="images/carousel_2.jpg" alt="...">
                    <div class="carousel-caption">
                        <h4>Flexible CV building process</h4>
                        <h4>Most relevant resume sections</h4>
                        <h4>Change CV content on the fly</h4>
                    </div>
                </div>
                <div class="item">
                    <img src="http://placehold.it/800x450" alt="...">
                    <div class="carousel-caption">
                        <h4>Constant preview while filling</h4>
                        <h4>Possibility to start over</h4>
                        <h4>Finished - just save your PDF</h4>

                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div> <!-- Carousel -->
    </div>
    <div class="lower">

        <div id="menu">
            <a ng-repeat="slide in slides">
                <img ng-src="{{ slide.image }}" alt="">
            </a>
        </div>
    </div>

    <div class="footer">
        <a href="https://www.linkedin.com/in/alexandruoat"><i class="fa fa-2x fa-linkedin-square"></i></a>
        <a href="https://github.com/midnitehighways/cvmaker"><i class="fa fa-2x fa-github-square"></i></a>
        <a href="https://github.com/midnitehighways/cvmaker"><i class="fa fa-2x fa-facebook-square"></i></a>
    </div>
    <script>
  $('.carousel').carousel({
    interval: 5000
  })
</script>
</body>
</html>
